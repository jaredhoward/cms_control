<% content_for(:title, @meta.title) unless @meta.title.blank? -%>
<% content_for(:meta_description, @meta.description) unless @meta.description.blank? -%>
<% content_for(:meta_keywords, @meta.keywords) unless @meta.keywords.blank? -%>
<% content_for(:page_header, @cms_content.title) -%>
<% content_for(:col_right, col_right_area(@meta.metaable)) -%>

<% content_for :nav_top do %>
<ul class="nav-top">
<% build_top_nav.each do |li| -%>
  <li<%= " class=\"#{li[:classes].join(' ')}\"" unless li[:classes].blank? %>><%= link_to(li[:title], li[:url]) %></li>
<% end -%>
</ul>
<% end -%>


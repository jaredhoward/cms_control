<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "#{controller.class.to_s}##{controller.action_name}") %></title>
    <%# stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'tiny_mce/tiny_mce'%>
    <%= javascript_include_tag 'tiny_mce_init'%>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>

      <ul>
        <li><%= link_to 'Pages', admin_cms_pages_url %></li>
        <li><%= link_to 'Blocks', admin_cms_blocks_url %></li>
        <li><%= link_to 'Products', admin_products_url %></li>
      </ul>

      <%= yield %>
    </div>
  </body>
</html>

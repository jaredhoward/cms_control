<%= f.hidden_field :id unless f.object.new_record? %>
<div class="input">
  <%= f.label :title, 'Content Title' %>
  <div class="field">
    <%= f.text_field :title %>
  </div>
</div>
<div class="input">
  <%= f.label :content %>
  <div class="field">
    <%= f.text_area :content, :class => 'mceEditor' %>
  </div>
</div>

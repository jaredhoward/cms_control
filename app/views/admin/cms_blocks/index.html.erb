<h2>Blocks</h2>
<ul class="top-nav"><li class="first last"><%= link_to 'New Block', new_admin_cms_block_path, :title => 'Create New Block' %></li></ul>
<table class="list" cellpadding="0" cellspacing="0">
	<thead>
	  <tr class="first last">
	    <th class="first">Title</th>
	  </tr>
	</thead>
	<tbody>
<% @cms_blocks.each do |cms_block| %>
  <tr>
    <td class="first last title">
			<div class="title"><%=h cms_block.title %></div>
			<div class="actions">
				<%= link_to 'Edit', edit_admin_cms_block_path(cms_block), :title => 'Edit Block' %>
				<%= link_to 'Show', [:admin, cms_block], :title => 'View Block Content' %>
				<%= link_to 'Destroy', [:admin, cms_block], :confirm => 'Are you sure?', :method => :delete, :class => 'last', :title => 'Delete Block' %>
			</div>
		</td>
  </tr>
<% end %>
</table>
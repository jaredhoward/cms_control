<h1>Listing Pages</h1>

<table>
  <tr>
    <th>Status</th>
    <th>URL</th>
    <th>Title</th>
    <th colspan="3">Actions</th>
  </tr>
<% @cms_pages.each do |cms_page| -%>
  <tr>
    <td><%= cms_page.status %></td>
    <td><%=h cms_page.cms_meta.url %></td>
    <td><%=h cms_page.cms_meta.title %></td>
    <td><%= link_to 'Show', url_for(:controller => '/cms', :action => 'show', :id => cms_page.cms_meta.id, :format => 'html'), :popup => true %></td>
    <td><%= link_to 'Edit', edit_admin_cms_page_path(cms_page) %></td>
    <td><%= link_to 'Destroy', [:admin, cms_page], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end -%>
</table>

<br />

<%= link_to 'New Page', new_admin_cms_page_path %>